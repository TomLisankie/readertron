<div id="sign-in" class="meta-page">
	<img src="/assets/rss-bot.png"/>
	<h2>Sign in to READERTRON</h2>

	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <%= f.email_field :email, {placeholder: "E-mail address"} %>
	  <br/>
	  <%= f.password_field :password, {placeholder: "••••••••••"} %>
	  <br/>
	  <button type="submit" class="classy primary">
		<span>Sign in to Readertron</span>
      </button>

	   <div id="remember-me"><%= f.check_box :remember_me, checked: 'checked' %> <%= f.label :remember_me %></div>
	   <div id="forgot-password"><a href="/users/password/new">Forgot your password?</a></div>
	<% end %>
</div>