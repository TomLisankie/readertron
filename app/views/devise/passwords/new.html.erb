<div class="meta-page">
<h2>Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div>
  <%= f.email_field :email, {placeholder: "E-mail address"} %></div>

  <div>
	  <button type="submit" class="classy primary"><span>Send me reset password instructions</span></button></div>
<% end %>
</div>