<a name="comment-<%= comment.id %>"></a>
<div class="comment" comment_id="<%= comment.id %>">
	<div class="comment-body">
		<span class="comment-author"><%= comment.user.name %> <span class="comment-timestamp"><%= comment_date(comment.updated_at) %>:</span></span> 
		<span class="the-comment-content"><%= markdown(comment.content) %></span>
		<% if comment.user == current_user %>
			<span class="comment-actions">
				<a href="#" class="comment-edit-link">Edit</a> | <a href="#" class="comment-delete-link">Delete</a>
			</span>
			<%= form_tag("/reader/edit_comment", :method => "post", :style => "display: none;") do %>
			  <%= render "github_textarea", textarea: text_area_tag(:comment_content, strip_tags(comment.content.gsub("<br>", "\n\n"))) %>
			  <div class="after-actions">
			    <%= submit_tag("Save") %>
			    <a href="#" class="cancel-comment-edit">Cancel</a>
			  </div>
			<% end %>
		<% end %>
	</div>	
</div>